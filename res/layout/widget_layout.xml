<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/widget_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:focusable="true"
                android:background="@drawable/widget_background">
    <ImageView
            android:id="@+id/widget_layout_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:src="@drawable/logo"/>
    <TextView
            android:id="@+id/widget_layout_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/widget_layout_logo"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="5dip"
            android:text="@string/widget_layout_title"
            style="@style/WidgetTitle"/>
    <TextView
            android:id="@+id/widget_layout_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_layout_logo"
            android:layout_marginTop="5dip"
            android:text="@string/widget_layout_body"
            style="@style/WidgetText"/>
    <LinearLayout
            android:id="@+id/widget_layout_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_layout_body"
            android:layout_marginTop="5dip"
            android:orientation="vertical"/>
    <Button
            android:id="@+id/widget_layout_button_add"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/widget_layout_button_add"
            style="@style/menu_button"
            android:visibility="gone"/>
</RelativeLayout>