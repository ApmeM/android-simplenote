<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">
    <Button android:layout_width="22dip"
            android:layout_height="22dip"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dip"
            android:id="@+id/widget_layout_row_button_edit"
            android:text="@string/widget_layout_row_button_edit"
            android:background="@drawable/edit_item"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/widget_layout_row_button_edit"
            android:id="@+id/widget_layout_row_text"
            android:clickable="true"
            style="@style/regular_text"
            />
</RelativeLayout>